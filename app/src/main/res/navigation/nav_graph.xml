<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/imageGridFragment">

    <fragment
        android:id="@+id/imageGridFragment"
        android:name="com.obvious.galleryapp.ui.fragment.ImageGridFragment"
        android:label="Obvious Gallery"
        tools:layout="@layout/fragment_image_grid">
        <action
            android:id="@+id/action_imageGridFragment_to_fullScreenFragment"
            app:destination="@id/fullScreenImageFragment"
            app:enterAnim="@anim/enter_anim"
            app:exitAnim="@anim/exit_anim"
            app:popEnterAnim="@anim/popenter_anim"
            app:popExitAnim="@anim/popexit_anim" />
    </fragment>
    <fragment
        android:id="@+id/fullScreenImageFragment"
        android:name="com.example.obviousgalleryapp.ui.fragment.FullScreenImageFragment"
        android:label="Obvious Gallery"
        tools:layout="@layout/fragment_fullscreen_image">

        <action
            android:id="@+id/action_fullScreenImageFragment_to_imageGridFragment"
            app:destination="@id/imageGridFragment"
            app:popUpTo="@id/imageGridFragment"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>